{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "blockBindings": true,
            "classes": true,
            "defaultParams": true,
            "destructuring": true,
            "forOf": true,
            "generators": true,
            "modules": true,
            "spread": true,
            "templateStrings": true,
            "jsx": true,
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
//        "semi": [2, "always"],
        "no-shadow": 1,
        "no-shadow-restricted-names": 2,
        "no-delete-var": 2,
        "no-unused-vars": [1, {
            "vars": "local", "args": "all"
        }],
        "no-use-before-define": 1,
        "block-spacing": 1,
        "consistent-return": [0],
        "curly": [1],
        "eqeqeq": [2],
        "no-eval": 1,
        "no-mixed-requires": [2],
        "max-depth": 2,
        "camelcase": 2,
    }
}
